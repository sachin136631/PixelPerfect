</head>
<body>
  <header>
    <div class="container-fluid position-relative p-0">
      <nav class="navbar navbar-expand-lg navbar-dark px-5 py-3 py-lg-0">
          <a href="index.html" onclick="trackClick(event)" id="000" class="navbar-brand p-0">
              <h1 class="m-0"><i class="fa fa-user-tie me-2"></i>Fashionista</h1>
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"  data-bs-target="#navbarCollapse" onclick="trackClick(event)" id="000">
              <span class="fa fa-bars"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
              <div class="navbar-nav ms-auto py-0">
                  <a href="fashionsta.html" class="nav-item nav-link active" onclick="trackClick(event)" id="000">Home</a>
                  <div class="nav-item dropdown">
                      <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" onclick="trackClick(event)" id="000">Shop by</a>
                      <div class="dropdown-menu m-0">
                          <a href="price.html" class="dropdown-item" onclick="trackClick(event)" id="000">Men</a>
                          <a href="feature.html" class="dropdown-item" onclick="trackClick(event)" id="000">Women</a>
                          <a href="team.html" class="dropdown-item" onclick="trackClick(event)" id="000">Kids</a>
                          <a href="testimonial.html" class="dropdown-item" onclick="trackClick(event)" id="000">Newest Arrivals</a>
                      </div>
                  </div>
                  <a href="contact.html" class="nav-item nav-link" onclick="trackClick(event)" id="000">Contact</a>
              </div>
              <button type="button" class="btn text-primary ms-3" data-bs-toggle="modal" data-bs-target="#searchModal" onclick="trackClick(event)" id="000"><i class="fa fa-search"></i></button>
              <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" class="btn btn-primary py-2 px-4 ms-3" onclick="trackClick(event)" i="000">Login</a>
          </div>
      </nav>
  </header>

  <section class="hero" id="home">
    <div class="hero-content">
      <h1>Style Redefined</h1>
      <p>Discover the latest trends in fashion, curated just for you.</p>
      <div class="hero-buttons">
       <a href="#shop" class="btn btn-dark" onclick="trackClick(event)" id="001">Buy Now</a>
       <a href="#shop" class="btn btn-outline-dark" onclick="trackClick(event)" id="001">Go To Cart</a>
      </div>
    </div>
  </section>
  
  <div class="scrolling-text">
    <span>SALE LIVE! SHOP NOW! SALE LIVE! SHOP NOW! SALE LIVE! SHOP NOW!</span>
  </div>

  <section class="shop-by-categories">
    <h2>Shop by Categories</h2>
    <div class="category-container">
      <a href="#men" class="category-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/men2.jpeg" alt="Men Category">
        <h3>Men</h3>
      </a>
      <a href="#women" class="category-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/women2.jpeg" alt="Women Category">
        <h3>Women</h3>
      </a>
      <a href="#kids" class="category-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/kid.jpeg" alt="Kids Category">
        <h3>Kids</h3>
      </a>
    </div>
  </section>
  
  <section class="deals">
    <h2>Latest Deals</h2>
    <div class="deals-container">
      <a href="#bags" class="prod-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/shoes2.jpeg" alt="combo sets">
        <h3>Footwear Starting at Rs.299</h3>
      </a>
      <a href="#women" class="prod-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/handbag2.jpeg" alt="bags and purses">
        <h3>Purses & Handbags Starting at Rs.199</h3>
      </a>
      <a href="#kids" class="prod-link" onclick="trackClick(event)" id="000">
        <img src="assets/website2/sunglass.jpeg" alt="skincare & makeup">
        <h3>Spectacles and sunglasses Starting at Rs.899</h3>
      </a>
    </div>
  </section>

  <footer>
    <p>&copy; 2024 Fashion Store. All rights reserved.</p>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const items = document.querySelectorAll(".category-link, .prod-link");

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      items.forEach((item) => observer.observe(item));
    });

    function trackClick(event) {
      const clickedElement = event.target;
      const id = clickedElement.getAttribute("id") || "unknown"; // Default to 'unknown' if id is not present
      const pixelUrl = `http://localhost:3000/tracking?action=click&version=B&id=${id}&timestamp=${new Date().getTime()}`;
      const img = new Image();
      img.src = pixelUrl;
    }
  </script>
</body>
</html>
